{
  "name": "files-manager",
  "version": "0.1.0",
  "license": "ISC",
  "scripts": {
    "test": "node ../../scripts/run-tests files-manager",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "format:write": "prettier **/*.{json,md} --write",
    "format:test": "prettier **/*.{json,md} --list-different",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "description": "The files-manager module",
  "keywords": [
    "PS",
    "module",
    "wakanda",
    "functional",
    "files-manager"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/izmjs/files-fm.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "release-it": "^12.4.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "npm i",
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "minimatch": "^3.0.4",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.0.1"
  }
}
